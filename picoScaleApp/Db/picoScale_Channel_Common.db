#----------------- PicoScale's data sources mapping -----------------

record(waveform, "$(C):$(P):POS_$(Ch)"){
	field(DESC, "Position")
	field(EGU, "nm")
	field(NELM, "2000")
	field(FTVL, "DOUBLE")
}

record(waveform, "$(C):$(P):VEL_$(Ch)"){
	field(DESC, "Velocity")
	field(EGU, "")
	field(NELM, 2000)
	field(FTVL, "DOUBLE")
}

record(waveform, "$(C):$(P):ACC_$(Ch)"){
	field(DESC, "Acceleration")
	field(EGU, "")
	field(NELM, "2000")
	field(FTVL, "DOUBLE")
}

record(ai, "$(C):$(P):SWRAW_$(Ch)"){
	field(DESC, "Sine raw")
	field(DTYPE, "Soft Channel")
}

record(ai, "$(C):$(P):S2WRAW_$(Ch)"){
	field(DESC, "Cosine raw")
	field(DTYPE, "Soft Channel")
}

record(ai, "$(C):$(P):SWQUALITY_$(Ch)"){
	field(DESC, "Sine quality")
	field(DTYPE, "Soft Channel")
}

record(ai, "$(C):$(P):S2WQUALITY_$(Ch)"){
	field(DESC, "Cosine quality")
	field(DTYPE, "Soft Channel")
}

#----------------- Records for Adjustment -----------------

record(longin, "$(C):$(P):WORKINGDIST_MIN_$(Ch)"){
	field(DESC, "Minimum working distance for adjustment")
	field(VAL, "30")
	field(EGU, "mm")
	field(LOPR, "1")
	field(HIPR, "500")
}

record(longin, "$(C):$(P):WORKINGDIST_MAX_$(Ch)"){
	field(DESC, "Maximum working distance for adjustment")
	field(VAL, "80")
	field(EGU, "mm")
	field(LOPR, "1")
	field(HIPR, "500")
}

record(sub, "$(C):$(P):ADJUST_$(Ch)"){
	field(DESC, "Manual and auto adjustmment routine")
	field(INPA, "$(C):$(P):WORKINGDIST_MIN_$(Ch)")
	field(INPB, "$(C):$(P):WORKINGDIST_MAX_$(Ch)")
	field(INPC, "$(C):$(P):CHANNELINDX")
	field(SNAM, "picoScale_adjust")
}










